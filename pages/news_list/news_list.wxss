.header {
  width: 100%;
  height: 350rpx;
  position: relative;
}
.header-circle-bg{
  width: 100%;
  height: 350rpx;
}
.header-user-avatar {
  border: 2rpx solid #fff;
  width:90rpx;
  height:90rpx;
  border-radius: 50%;
  position: absolute;
  right: 50rpx;
  bottom: 50rpx;
}
.header-user-name {
  position: absolute;
  right: 50rpx;
  bottom: 20rpx;
  width: 90rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
.news-item-header {
  position: relative;
  height: 100rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 20rpx;
  background-color: #eaeaea;
}
.news-item-header-avatar {
  height: 80rpx;
  width: 80rpx;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  border-radius: 50%;
}
.news-item-header-t {
  position: absolute;
  margin-left: 10rpx;
  top: 10rpx;
  left: 90rpx;
}
.news-item-header-sex,
.news-item-header-level,
.news-item-header-nickname {
  display: inline-block;
}
.news-item-header-sex {
  margin-left: 6rpx;
}
.news-item-header-level{
  font-size: 16rpx;
  height: 20rpx;
  line-height: 20rpx;
  margin-left: 6rpx;
  text-align: center;
  color: white;
  background-color: #a4b2bb;
  padding-left: 10rpx;
  padding-top: 2rpx;
  padding-bottom: 2rpx;
  padding-right: 10rpx;
  border-radius: 10rpx;
}
.news-item-header-time {
  margin-left: 10rpx;
  position: absolute;
  top: 50rpx;
  left: 90rpx;
}
.news-item-header-sex {
    width: 18rpx;
    height: 20rpx;
}
.news-item-header-chat {
  position: absolute;
  right: 0;
  top: 10rpx;
  display: inline-block;
}
.news-item-header-chat > image {
  display: inline;
}
.news-item-header-chat > view {
  display: inline;
}

.news-item-content {
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size: 24rpx;
}
 
.news-item-content-imgs image {
   font-size: 0;
   vertical-align: top;
   border: 1rpx solid #fff;
   box-sizing: border-box;
}


/*操作*/
.operate {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.operate .operate-item {
  text-align: center;
  align-self: center;
  flex:1;
}

.operate .operate-item.fl {
  text-align: left;
}
.operate .operate-item.fr {
  text-align: right;
}
.operate-item-content {
  display: inline;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 5rpx;
  padding-bottom: 5rpx;
  border-radius: 2rpx;
  background-color: transparent;
  opacity: 1;
}
.operate-item-content.active {
   background-color: #eaeaea;
  opacity: .8;
}
.operate-item-img {
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}
.operate-item-text {
    margin-left: 6rpx;
    display: inline;
}